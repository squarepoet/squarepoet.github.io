{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es6",
        "module": "esnext",
        "lib": ["dom", "dom.iterable", "es2016", "webworker"],
        "removeComments": true,
        "sourceMap": true,
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve"
    },
    "include": ["next-env.d.ts", "declarations/global.d.ts", "**/*.ts", "**/*.tsx", "**/*.js"],
    "exclude": ["node_modules", "www"]
}
